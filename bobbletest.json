          "width": {
            "type": "fixed",
            "value": 28,
            "unit": 28
          },
          "height": {
            "type": "fixed",
            "value": 28,
            "unit": 28
          },
          "margins": {
            "top": 2,
            "right": 12,
            "bottom": 2
          }
        },
        {
          "type": "text",
          "$text": "list_text",
          "$text_color": "list_color",
          "font_size": 24,
          "line_height": 32,
          "font_weight": "medium",
          "width": {
            "type": "wrap_content",
            "constrained": true
          }
        }
      ]
    }
  }
